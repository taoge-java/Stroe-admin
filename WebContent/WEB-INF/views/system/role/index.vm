  /*管理员-角色-添加*/
  function admin_role_add(title,url,w,h){
      layer_show(title,url,w,h);
  }
  
  /*管理员-角色-编辑*/
  function admin_role_edit(id){
      $.ajax({
	     url:"#(BASE_PATH)/system/role/edit/"+id,
		 dataType:"html",
		 success:function(data){
		     layer.open({
                	  type:1,
                	  area:['600px','300px'],
                	  title:'编辑角色',
                	  content:data,
                	  scrollbar: false,
                      skin:'layui-layer-green',
                      yes:function(index,layero){
					      updateRole(id,index);
                      },
                      btn:['修改','关闭']
        	 });
		 }
	  });
  }
  

  $(function(){
      list(true);
  });
  
  function updateRole(id,index){
      if($("#form-admin-role-add").valid()){
		    $.ajax({
			   url:"#(BASE_PATH)/system/role/update",
			   data:{
			      "role_id" : id,
			      "roleName": $("#roleName").val(),
				  "remark":$("#remark").val()
			   },
			   dataType:"json",
			   success:function(data){
			      if(data.code == 1){
					  layer.close(index); 
				      popSuccess(data.message);
				  }else {
			          popError(data.message);
				  }
				  list();
			   }
			});
		}
  }
  
  function list(flag){
        global.loading("加载中,请稍后...");
		if(flag){
		   
		}
        $.post("#(BASE_PATH)/system/role/list",{},function(data){
		   $("#role_list").html("");
		   $("#role_list").html(data);
		   setTimeout("global.close()",500);
	 },"html");
  }
  
  
  function operRole(id){
      $.ajax({
		   url:"#(BASE_PATH)/system/role/operRole",
		   data:{
		      "id":id
		   },
		   type:"post",
		   dataType:"html",
		   success:function(data){
		     layer.open({
				type : 1,
				title : '权限设置',
				content : data,
				scrollbar: true,
				btn:['确定'],
				yes:function(index,layero){
					getOper(index,id);
				},
			 });
		   }
	   });
  }
  
  function delRole(id){
     $.ajax({
		   url:"#(BASE_PATH)/system/role/del/"+id,
		   data:{
		      "id":id
		   },
		   type:"post",
		   dataType:"json",
		   success:function(data){
		      if(data.code == 1){
			     popSuccess(data.message);
			  }else{
			     popError(data.message);
			  }
		   }
	   });
  }
  
  function getOper(index,id){
	    var nodes = zTree.getCheckedNodes();
	    var arr = new Array();
    	for(var i = 0; i<nodes.length; i++){
    		if(nodes[i].code){
    			arr.push(nodes[i].id);
    		}
    	}
		$.post("#(BASE_PATH)/system/role/saveOper",{"roleId":id,"operIds":arr.toString()},function(data){
		   if(data.code == 1) {
				layer.msg(data.message, {
            	    skin: 'layui-layer-green',
            	    closeBtn: 0,
            	    time: 2000,
            	    icon: 1,
            	    shift: 0 //动画类型
              	});
			}else{
				layer.alert(data.message, {
            	    skin: 'layui-layer-green',
            	    closeBtn: 0,
            	    time: 2000,
            	    icon: 2,
            	    shift: 0 //动画类型
            	});
			}
			layer.close(index);
		},"json");
		setTimeout("location.reload()",800);
   }
</script>
